._filtered-content.nodblclick
  .offcanvas.offcanvas-start{ id: offcanvas_filter_id,
                              "data-bs": { scroll: "true", backdrop: "false" } }
    .offcanvas-header
      %h5.offcanvas-title Filters
      %button.btn.btn-close{ "data-bs": { dismiss: "offcanvas" } }
    .offcanvas-body
      = render_filter_bars
  .filtered-results
    = render_filtered_results home_view: :filtered_results
