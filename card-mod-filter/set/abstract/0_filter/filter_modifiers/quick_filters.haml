- if quick_filter_items.present?
  .quick-filter._quick-filter.mb-2

    //= icon_tag :quick_filter, "filter-section-icon"
    .quick-filter-links.d-flex.flex-wrap
      - quick_filter_items.each do |f|
        - filter_key = f[:active] ? "data-remove-filter" : "data-filter"

        - if f[:separator]
          %span.d-inline-block.me-2.my-1.fs-4
            |

        %a.mb-2.me-2.text-nowrap{ filter_key => JSON(f[:filter]),
                                  href: "#",
                                  class: f[:class],
                                  title: "Quick Filter: #{f[:text]}" }
          = f[:icon]
          %span.px-1
            = f[:text]
      = custom_quick_filters
